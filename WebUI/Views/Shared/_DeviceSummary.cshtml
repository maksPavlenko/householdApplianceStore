@model Domain.Entities.Device

<div class="well">
    <div class="row">
        <div class="col-xs-10">
            <h3>@Model.Name </h3>
            <h4>@Model.Country</h4>
        </div>
        <div class="col-xs-2">
            <h3>
                <strong id="price" class="pull-right label label-primary">
                    @Model.Price.ToString("# грн")
                </strong>
            </h3>
            
            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <div class="pull-right">
                    @Html.HiddenFor(x => x.DeviceId)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-success" value="Добавить в корзину"/>
                </div>
            }
        </div>
    </div>
    <span class="lead">
        @Model.Description
    </span>
</div>
